<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2E2E"
    tools:context=".ManageOrdersActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#FDF646"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Manage Orders"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Lewis"
        android:layout_marginTop="40dp"
        android:paddingStart="20dp"
        android:textSize="20dp"
        android:textColor="#FDF646"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:background="#D9D9D9"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <Button
            android:id="@+id/button_cashRegister"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/oval_border"
            android:backgroundTint="#FDF646"
            android:layout_marginEnd="20dp"
            android:text="Cash Register" />

        <Button
            android:id="@+id/button_trackOrders"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/oval_border"
            android:backgroundTint="#FDF646"
            android:layout_weight="1"
            android:text="Track Orders" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>